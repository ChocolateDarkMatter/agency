---
import { Hero } from "@modules/Hero";
import Layout from "../layouts/Layout.astro";
import { LogosSlider } from "@modules/LogosSlider";

import { FadeIn } from "@utils/animations/FadeIn";
import { Button } from "@components/Button";
import { Icon } from "@static/icons";
import { Contact } from "@modules/Contact";
---

<Layout
    title="Agency Aestro | Houston's Premier Event Rental Services"
    description="Discover Houston's most reliable event rental company. From elegant wedding rentals to corporate event essentials, we provide everything you need for a flawless event experience."
>
    <main class="page-content">
        <Hero heroType="center" client:load>
            <FadeIn delay={0.2} client:load>
                <h1>Your Complete Event Rental Solution in Houston</h1>
                <p>
                    From intimate gatherings to grand celebrations, we provide the perfect rental solutions to bring your vision to life. Our extensive inventory of premium event essentials ensures your Houston event will be nothing short of spectacular.
                </p>
            </FadeIn>
            <FadeIn delay={0.3} client:load>
                <Button link="/contact" variant="secondary">
                    Start Planning Your Event
                </Button>
            </FadeIn>
            <FadeIn client:load delay={0.4}>
                <div class="icon-wrapper">
                    <Icon iconData="arrowDown" alt="arrow down icon" />
                </div>
            </FadeIn>
        </Hero>
        <LogosSlider client:load />
        <Hero
            heroType="textImage"
            client:load
            content={{
                title: `Premium Event Essentials for Every Occasion`,
                paragraph: `Our comprehensive inventory includes everything you need for a successful event. From elegant tables and chairs to sophisticated tent rentals, we provide high-quality equipment that combines style with functionality. Whether you're planning a corporate gala or a dream wedding, we have the perfect solutions to match your vision.`,
                image: {
                    src: "/src/static/images/IMG_3965.webp",
                    alt: "Elegant event setup with premium rentals",
                    width: 300,
                    height: 300,
                },
            }}
        />
        <Hero
            heroType="textImage"
            client:load
            content={{
                switchPlaces: true,
                title: `Stress-Free Event Planning Experience`,
                paragraph: `We understand that planning an event can be overwhelming. That's why we offer a seamless rental experience with expert guidance every step of the way. Our team handles delivery, setup, and breakdown, allowing you to focus on creating unforgettable moments for your guests.`,
                image: {
                    src: "/src/static/images/wbp-5.JPG",
                    alt: "Professional event setup team in action",
                    width: 300,
                    height: 300,
                },
            }}
        />

        <Hero
            heroType="textImage"
            client:load
            content={{
                title: `Trusted by Houston's Leading Event Planners`,
                paragraph: `Join the ranks of satisfied clients who have experienced our exceptional service. From wedding planners to corporate event coordinators, we've earned our reputation as Houston's most reliable rental partner. Our commitment to quality and customer satisfaction sets us apart in the event rental industry.`,
                image: {
                    src: "/src/static/images/IMG_6313.JPG",
                    alt: "Elegant event venue with premium rentals",
                    width: 300,
                    height: 300,
                },
            }}
        />
        <Contact client:load />
    </main>
</Layout>
