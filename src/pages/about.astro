---
import { ContentSection } from "@modules/ContentSection";
import Layout from "../layouts/Layout.astro";
import { FadeIn } from "@utils/animations/FadeIn";
import { BoxOffers } from "@modules/BoxOffers";
import { Container } from "@components/Container";
import { Hero } from "@modules/Hero";
---

<Layout 
    title="About Us | Setup & Smile - Houston Event Rentals" 
    description="Learn about Setup & Smile, Houston's trusted source for elegant event rentals. Discover our commitment to making your event spectacular and stress-free."
>
    <main class="page-content">
        <ContentSection
            style={{
                maxWidth: "600px",
                margin: "0 auto",
            }}
        >
            <FadeIn client:visible>
                <h1>Your Trusted Partner in Houston Event Rentals</h1>
                <p>
                    At Setup & Smile, we transform ordinary spaces into extraordinary event venues. As Houston's premier event rental company, we specialize in providing elegant, reliable solutions for weddings, corporate events, galas, and private celebrations. Our commitment to excellence and attention to detail ensures your event will be nothing short of spectacular.
                </p>
            </FadeIn>
        </ContentSection>
        <Hero
            heroType="textImage"
            client:load
            content={{
                switchPlaces: true,
                title: `Premium Event Rentals in Houston`,
                paragraph: `From elegant wedding receptions to sophisticated corporate gatherings, our extensive inventory of premium event rentals includes everything you need. Choose from our selection of high-quality tables, chairs, tents, linens, and decor items, all maintained to the highest standards. Our team handles delivery, setup, and breakdown, ensuring a seamless experience from start to finish.`,
                image: {
                    src: "/src/static/images/balloonrainbow.webp",
                    alt: "Elegant event setup with premium rentals",
                    width: 300,
                    height: 300,
                },
            }}
        />

        <Hero
            heroType="textImage"
            client:load
            content={{
                title: `Why Choose Setup & Smile?`,
                paragraph: `With years of experience serving the Houston area, we understand what it takes to create memorable events. Our local expertise, combined with our commitment to customer service, makes us the preferred choice for event planners and hosts alike. We offer flexible rental packages, competitive pricing, and personalized service to meet your specific needs.`,
                image: {
                    src: "/src/static/images/king.webp",
                    alt: "Professional event setup team",
                    width: 300,
                    height: 300,
                },
            }}
        />
        <Container>
            <FadeIn client:visible>
                <h2>Connect With Us</h2>
            </FadeIn>
        </Container>
        <BoxOffers
            client:load
            boxes={[
                {
                    asLink: true,
                    href: "https://www.facebook.com",
                    content: `
                        <h3>Facebook</h3>
                    `,
                },
                {
                    asLink: true,
                    href: "https://www.linkedin.com/c",
                    content: `
                        <h3>Linkedin</h3>
                    `,
                },
                {
                    asLink: true,
                    href: "https://www.twitter.com",
                    content: `
                        <h3>Twitter</h3>
                    `,
                },
            ]}
        />
    </main>
</Layout>
